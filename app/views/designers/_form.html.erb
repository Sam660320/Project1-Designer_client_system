<%= form_for @designer do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name%>
    <%= f.label :dob, 'Date of birth'%>
    <%= f.text_field :dob, :placeholder => 'YYYY-MM-DD'%>
    <%= f.label :hireyear, 'Employment Date' %>
    <%= f.text_field :hireyear %>
    <%= f.label :email%>
    <%= f.text_field :email%>
    <%= f.label :phone%>
    <%= f.text_field :phone%>
    <%= f.label :address%>
    <%= f.text_field :address%>
    <%= f.label :award %>
    <%= f.text_field :award %>
    <%= f.label :image%>
    <%= f.text_field :image%>

    <%= f.submit%>
<% end %>
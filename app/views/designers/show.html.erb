<div class="container">
    <h1><%= @designer.name %></h1><br>
    <div class="row">
        <div class="col">
            <%= image_tag @designer.image, :class => 'profileimg' if @designer.image.present? %>
        </div>
        <div class="col">
            <ul class="list-group">
                <li class="list-group-item list-group-item-secondary">Name: <%= @designer.name %></li>
                <li class="list-group-item list-group-item-success">Date of Birth: <%= @designer.dob.strftime '%B %e, %Y' %></li>
                <li class="list-group-item list-group-item-secondary">Emplyment Date: <%= @designer.hireyear %></li>
                <li class="list-group-item list-group-item-success">phone: <%= @designer.phone %></li>
                <li class="list-group-item list-group-item-secondary">email: <%= @designer.email %></li>
                <li class="list-group-item list-group-item-success">Address: <%= @designer.address %></li>
                <li class="list-group-item list-group-item-secondary">Award: <%= @designer.award %></li>
                <li class="list-group-item list-group-item-success">Projects:  <% @designer.projects.each do |project| %>
                    <%= link_to project.name, project %>
                    <% end %>
                </li>
            </ul>
            <br>

           
            <div class="controls">
                <%= link_to "Edit designer", edit_designer_path(@designer), :class=>"btn btn-primary"%>
                <br><br>
                <%= button_to "Delete designer", @designer, :class=>"btn btn-danger", :method => 'delete', :data => { :confirm => "Are you sure?"} %>
            </div>
        </div>
    </div>
</div>
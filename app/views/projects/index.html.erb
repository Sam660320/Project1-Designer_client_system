<div class="container">
    <h1>All Projects</h1><br>
    <%= link_to "Create New Project", new_project_path%>
    <br><br><br>
    <% @projects.each do |project|%>
    
        <%= image_tag project.image, :class => "row g-3 col-lg-4" if project.image.present? %>
            <ul>
                <br>
                <li>Name: <%= link_to project.name, project %></li>
                <br>
            </ul>
    
    <% end %>


</div>

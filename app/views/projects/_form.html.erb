
<%= form_for @project do |f| %>
    <%= f.label :name, :class=>'form-control-plaintext'%>
    <%= f.text_field :name, :class => 'form-control'%>
    <%= f.label :location%>
    <%= f.text_field :location, :class => 'form-control'%>
    <%= f.label :area%>
    <%= f.text_field :area, :class => 'form-control'%>
    <%= f.label :style%>
    <%= f.text_field :style, :class => 'form-control'%>
    <%= f.label :start_date, 'Start Date'%>
    <%= f.text_field :start_date, :placeholder => 'YYYY-MM-DD', :class => 'form-control'%>
    <%= f.label :estimate_time_finish, 'Estimate time of completion'%>
    <%= f.text_field :estimate_time_finish, :placeholder => 'YYYY-MM-DD', :class => 'form-control'%>
    <%= f.label :cost%>
    <%= f.text_field :cost, :class => 'form-control'%>
    <%= f.label :image%>
    <%= f.text_field :image, :class => 'form-control'%><br>
    <%= f.submit%>
<% end %>
<div class="container">
    <h1><%= @client.name %></h1><br>
    <div class="row">
        <div class="col">
            <%= image_tag @client.image, :class => 'profileimg' if @client.image.present? %>
        </div>
        <div class="col">
            <ul class="list-group">
                <li class="list-group-item list-group-item-secondary">Name: <%= @client.name %></li>
                <li class="list-group-item list-group-item-success">phone: <%= @client.phone %></li>
                <li class="list-group-item list-group-item-secondary">email: <%= @client.email %></li>
                <li class="list-group-item list-group-item-success">Address: <%= @client.address %></li>
                <li class="list-group-item list-group-item-secondary">Heard us from: <%= @client.heard_us_from %></li>
                <li class="list-group-item list-group-item-success">preferred_style: <%= @client.preferred_style %></li>
            </ul>
            <br>

            <div class="controls">
                <%= link_to "Edit client", edit_client_path(@client), :class=>"btn btn-primary"%>
                <br><br>
                <%= button_to "Delete client", @client, :class=>"btn btn-danger", :method => 'delete', :data => { :confirm => "Are you sure?"} %>
            </div>
        </div>
    </div>
</div>